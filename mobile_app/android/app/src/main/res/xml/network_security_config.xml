<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: HTTPS only for all domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Production domain with HTTPS enforcement -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">mewallet.tgenie.in</domain>
    </domain-config>
    
    <!-- Only allow cleartext for localhost during development (optional - remove for production) -->
    <!-- Local testing configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">192.168.68.110</domain>
        <domain includeSubdomains="true">10.19.34.227</domain>
    </domain-config>
</network-security-config>
